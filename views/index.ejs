		// Function to get the cookie value by name
		function getCookie(name) {
				const cookieArr = document.cookie.split(';');
				for (const cookie of cookieArr) {
					const [cookieName, cookieValue] = cookie.split('=').map(c => c.trim());
					if (cookieName === name) {
						return cookieValue;
					}
				}
				return null;
			}

